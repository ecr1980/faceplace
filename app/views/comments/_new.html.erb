<%= form_with model: @comment do |f| %>
  <%= f.hidden_field :commentable_id, :value => saying.id %>
  <%= f.hidden_field :commentable_type, :value => "Saying" %>
  <%= f.hidden_field :commentor_id, :value => current_user.id %>
  <br>
  <%= f.text_area :body, rows: 1, style: "width:50%" %><br>
  <%= f.submit "Comment" %>
<% end %>